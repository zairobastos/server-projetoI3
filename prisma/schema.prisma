// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Usuario {
    id     String  @id @default(uuid())
    nome   String
    email  String  @unique
    senha  String
    imagem String?

    @@map("usuarios")
}

model Time {
    id         String  @id @default(uuid())
    nome       String
    abreviacao String
    escudo     String?

    @@map("times")
}

model Jogador {
    id      String  @id @default(uuid())
    nome    String
    posicao String
    numero  Int
    imagem  String?
    timeId  String?

    @@map("jogadores")
}
