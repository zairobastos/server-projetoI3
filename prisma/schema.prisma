// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Usuario {
    id     String  @id @default(uuid())
    nome   String
    email  String  @unique
    senha  String
    imagem String?

    @@map("usuarios")
}

model Time {
    id         String  @id @default(uuid())
    nome       String
    abreviacao String
    escudo     String?

    @@map("times")
}

model Jogador {
    id      String  @id @default(uuid())
    nome    String
    posicao String
    numero  String
    imagem  String?
    timeId  String?

    @@map("jogadores")
}

model Campeonato {
    id        String  @id @default(uuid())
    nome      String
    descricao String
    premiacao String
    logo      String?
    situacao  Opcao   @default(ABERTO)
    qtdTimes  Int
    userId    String?

    @@map("campeonatos")
}

enum Opcao {
    INICIADO
    ABERTO
    FINALIZADO
    CANCELADO
}

model Partida {
    id           String @id @default(uuid())
    data         String
    horario      String
    local        String
    campeonatoId String
    time1Id      String
    time2Id      String
    placar1      Int
    placar2      Int

    @@map("partidas")
}
